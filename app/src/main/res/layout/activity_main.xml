<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/displayLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:paddingTop="60dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tvInfix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#A5A5A5"
            android:textSize="22sp"
            android:gravity="end"
            android:layout_marginBottom="6dp"
            android:letterSpacing="0.2"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/tvPostfix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:gravity="end"
            android:layout_marginBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:letterSpacing="0.2" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text=""
            android:textColor="#FF9500"
            android:textSize="60sp"
            android:gravity="end|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:letterSpacing="0.2"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="start" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayLayout"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btnClear"
            android:text="C"
            style="@style/iOSButtonDark" />
        <Button
            android:id="@+id/btnOpenParen"
            android:text="("
            style="@style/iOSButtonDark" />
        <Button
            android:id="@+id/btnCloseParen"
            android:text=")"
            style="@style/iOSButtonDark" />
        <Button
            android:id="@+id/btnDivide"
            android:text="/"
            style="@style/iOSButtonOrange" />

        <Button
            android:id="@+id/btn7"
            android:text="7"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btnMinus"
            android:text="−"
            style="@style/iOSButtonOrange" />

        <Button
            android:id="@+id/btn4"
            android:text="4"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btn5"
            android:text="5"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btn6"
            android:text="6"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btnPlus"
            android:text="+"
            style="@style/iOSButtonOrange" />

        <Button
            android:id="@+id/btn1"
            android:text="1"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btn2"
            android:text="2"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btn3"
            android:text="3"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btnMultiply"
            android:text="*"
            style="@style/iOSButtonOrange" />

        <Button
            android:id="@+id/btn0"
            android:text="0"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btnDot"
            android:text="."
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btnDelete"
            android:text="⌫"
            android:textSize="20sp"
            style="@style/iOSButtonLight" />
        <Button
            android:id="@+id/btnEquals"
            android:text="="
            style="@style/iOSButtonOrange" />

    </GridLayout>
</RelativeLayout>
