<resources>
    <style name="iOSButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">74dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="iOSButtonDark" parent="iOSButtonBase">
        <item name="android:backgroundTint">#D4D4D2</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="iOSButtonLight" parent="iOSButtonBase">
        <item name="android:backgroundTint">#505050</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="iOSButtonOrange" parent="iOSButtonBase">
        <item name="android:backgroundTint">#FF9500</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
